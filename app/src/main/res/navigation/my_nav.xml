<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_nav.xml"
    app:startDestination="@id/allCocktailsFragment">
    <fragment
        android:id="@+id/detailedCocktailFragment"
        android:name="il.co.syntax.finalkotlinproject.ui.detailed_cocktail.DetailedCocktailFragment"
        android:label="cocktail_detail_fragment"
        tools:layout="@layout/cocktail_detail_fragment" />
    <fragment
        android:id="@+id/searchByNameFragment"
        android:name="il.co.syntax.finalkotlinproject.ui.search_by_name.SearchByNameFragment"
        android:label="search_by_name_fragment"
        tools:layout="@layout/search_by_name_fragment" >
        <action
            android:id="@+id/action_searchByNameFragment_to_allCocktailsByNameFragment"
            app:destination="@id/allCocktailsFragment"
            app:enterAnim="@anim/from_right"
            app:exitAnim="@anim/to_left"
            app:popEnterAnim="@anim/from_left"
            app:popExitAnim="@anim/to_right" />
    </fragment>
    <fragment
        android:id="@+id/searchByIngredientFragment"
        android:name="il.co.syntax.finalkotlinproject.ui.search_by_ingredient.SearchByIngredientFragment"
        android:label="search_by_ingredient_fragment"
        tools:layout="@layout/search_by_ingredient_fragment" />
    <fragment
        android:id="@+id/allCocktailsFragment"
        android:name="il.co.syntax.finalkotlinproject.ui.all_cocktails.AllCocktailsFragment"
        android:label="cocktails_fragment"
        tools:layout="@layout/cocktails_fragment" >
        <action
            android:id="@+id/action_allCocktailsFragment_to_detailedCocktailFragment2"
            app:destination="@id/detailedCocktailFragment"
            app:enterAnim="@anim/from_right"
            app:exitAnim="@anim/to_left"
            app:popEnterAnim="@anim/from_left"
            app:popExitAnim="@anim/to_right" />
    </fragment>
</navigation>